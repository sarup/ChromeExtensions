{
  "manifest_version": 3,
  "name": "Screenshot Capture & Editor",
  "version": "1.0",
  "description": "Capture, edit, and save screenshots from your browser.",
  "permissions": ["activeTab", "scripting"],
  "host_permissions": ["<all_urls>"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
}